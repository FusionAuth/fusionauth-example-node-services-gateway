extends layout


block content
  - var clientId = 'b2b82e4f-6b5a-47c6-af3d-c904ef59d7db'
  h1= title
  if user
    p Hello #{user.firstName}
  else
    a(href='http://localhost:9011/oauth2/authorize?client_id=b2b82e4f-6b5a-47c6-af3d-c904ef59d7db&response_type=code&redirect_uri=http%3A%2F%2Flocalhost%3A3000%2Foauth-redirect&scope=offline_access&state='+stateValue) Login

  p Welcome to #{title}
